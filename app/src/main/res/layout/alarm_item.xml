<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/alarm_set"
        android:layout_width="48dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_alarm_active_24" />

    <LinearLayout
        android:id="@+id/item_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/alarm_set"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alarm_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alarm title"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/alarm_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alarm date and time"
            android:textColor="@color/colorDarkBlue"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/repeat_info"
            android:layout_width="match_parent"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorDarkBlue"
            tools:text="Repeat No and Type"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/alarm_on_off"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_notifications_off_24"
        app:layout_constraintStart_toEndOf="@+id/item_text"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>