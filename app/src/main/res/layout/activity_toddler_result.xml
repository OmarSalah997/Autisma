<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".ToddlerResult">
    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/bluelight"
        android:tooltipText="@string/PleaseWait"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="12sp">
            <TextView
                android:id="@+id/toddscore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textSize="25sp"
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                android:layout_weight="1"
                android:visibility="invisible"
                />

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:layout_marginStart="12sp"
                android:layout_marginEnd="12sp"
                android:id="@+id/Gscore_progress"
                android:layout_width="100sp"
                android:layout_height="100sp"
                custom:donut_progress="0"
                android:visibility="invisible"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/Gscore_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/proceed_to_MCHAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:text="@string/ProceedMCHAT"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:text="@string/done"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:visibility="invisible"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>