<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".child_tests">

    <Button
        android:id="@+id/button_takephoto_test"
        android:layout_width="379dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/rect_button"
        android:elevation="5dp"
        android:paddingStart="8dp"
        android:paddingTop="20dp"
        android:paddingEnd="8dp"
        android:paddingBottom="20dp"
        android:text="Press the dot"
        android:textColor="@color/colorWhite"
        android:translationZ="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_video_test"
        android:layout_width="379dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_button"
        android:drawableTop="@drawable/ic_baseline_videocam_24"
        android:paddingStart="8dp"
        android:paddingTop="20dp"
        android:paddingEnd="8dp"
        android:paddingBottom="20dp"
        android:text="@string/video"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_takephoto_test" />

    <Button
        android:id="@+id/button_mcq"
        android:layout_width="379dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_button"
        android:drawableTop="@drawable/ic_baseline_mcq_24"
        android:paddingStart="8dp"
        android:paddingTop="30dp"
        android:paddingEnd="8dp"
        android:paddingBottom="30dp"
        android:text="@string/MCQ"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_video_test" />

    <CheckBox
        android:id="@+id/checkBox_autistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#000000"
        android:cursorVisible="true"
        android:state_focused="true"
        android:text="Are you doing this test for an autistic child ?"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="115dp" />
</androidx.constraintlayout.widget.ConstraintLayout>