<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autisma">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <compatible-screens>
        <screen
            android:screenDensity="hdpi"
            android:screenSize="normal" />
    </compatible-screens>
    <uses-feature
    android:name="android.hardware.camera"
    android:required="true" />
    <application
        android:allowBackup="false"
        android:icon="@drawable/app_icon_200x200no_title"
        android:label="@string/app_name"
        android:launchMode="singleInstance"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UserProfile"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.autisma.MainHOME" />
        </activity>
        <activity android:name=".Change_password" />

        <activity
            android:name=".Settings"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.autisma.MainHOME" />
        </activity>

        <activity
            android:name=".MainHOME"
            android:theme="@style/mainTheme"
            />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".signUP" />
        <activity android:name=".LOGIN">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Quiz_Activity"
            android:theme="@style/mainTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.autisma.MainHOME" />
        </activity>
        <activity android:name=".PersonalDetails" />
        <activity android:name=".RecordingActivity" />
        <activity android:name=".UploadImageActivity"
            android:theme="@style/mainTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.autisma.MainHOME" />
        </activity>


        <activity android:name=".Helpful_institiutions"/>
        <activity android:name=".Doctors" />
        <activity android:name=".Profile" />

        <service
            android:name=".RecorderService"
            android:enabled="true"
            android:exported="true" />
        <activity
            android:name=".Alarm_module.Alarms_main"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".Alarm_module.ReminderAddActivity"
            android:label="title_activity_add_reminder"/>
        <activity android:name=".Alarm_module.ReminderEditActivity"
            android:label="title_activity_edit_reminder"/>
        <receiver android:name=".Alarm_module.AlarmReceiver"/>
        <receiver android:name=".Alarm_module.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


</manifest>